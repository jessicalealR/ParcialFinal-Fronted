<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Resumen de Prácticas</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <h1 class="mt-5">Resumen de Prácticas</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Destino</th>
          <th>Fecha de Salida</th>
          <th>Fecha de Regreso</th>
          <th>Empresas</th>
        </tr>
      </thead>
      <tbody>
        <% summary.forEach(practice => { %>
          <tr>
            <td><%= practice.destination %></td>
            <td><%= new Date(practice.startDate).toLocaleDateString() %></td>
            <td><%= new Date(practice.endDate).toLocaleDateString() %></td>
            <td><%= practice.companies.join(', ') %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
