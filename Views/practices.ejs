<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Prácticas del Docente</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1 class="mt-5">Prácticas del Docente</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Destino</th>
          <th>Fecha de Salida</th>
          <th>Fecha de Regreso</th>
          <th>Empresas</th>
        </tr>
      </thead>
      <tbody>
        <% if (practices && practices.length) { %>
          <% practices.forEach(practice => { %>
            <tr>
              <td><%= practice.destination %></td>
              <td><%= new Date(practice.startDate).toLocaleDateString() %></td>
              <td><%= new Date(practice.endDate).toLocaleDateString() %></td>
              <td><%= practice.companies.join(', ') %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="4">No se encontraron prácticas para el docente especificado.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
